<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Html.Partial("MetatagsPartial")
    @Html.Partial("CssPartial")
</head>
<body class="subpage">
    <div id="page-wrapper">

        <!-- Header -->
        @Html.Partial("HeaderPartial")
        <!-- Content -->
        <section id="content">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <!-- Main Content -->
                        <section>
                            @RenderBody()
                        </section>
                    </div>
                </div>
            </div>
        </section>
        <!-- Copyright -->
        <div id="copyright">
            &copy; PepegaCo. All rights reversed. | Design: <a href="http://html5up.net">HTML5 UP</a>
        </div>

    </div>

    <!-- Scripts -->
    @Html.Partial("ScriptsPartial")

</body>
</html>